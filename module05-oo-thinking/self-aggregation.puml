@startuml self-aggregation

skinparam classAttributeIconSize 0
skinparam classFontName Consolas
skinparam classFontSize 13
skinparam classBackgroundColor #EFF6FF
skinparam classBorderColor #2563EB
skinparam classHeaderBackgroundColor #2563EB
skinparam classFontColor #FFFFFF
skinparam classAttributeFontColor #1F2937
skinparam arrowColor #7C3AED
